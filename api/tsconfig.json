{
  "compilerOptions": {
    "target": "ES2024",
    "module": "commonjs",
    "baseUrl": "./",
    "paths": {
      "@core/*": [
        "src/core/*"
      ],
      "@infra/*": [
        "src/infra/*"
      ],
    },
    "types": [],
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}
